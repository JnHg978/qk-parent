<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.qk.management.mapper.CourseMapper">
    <insert id="insert">
        insert into course(name,subject,price,target,description,create_time,update_time)
        values(#{name},#{subject},#{price},#{target},#{description},#{createTime},#{updateTime})
    </insert>
    <update id="updateById">
        update course
        <set>
            <if test="name != null and name != ''">
                name = #{name},
            </if>
            <if test="subject != null">
                subject = #{subject},
            </if>
            <if test="price != null">
                price = #{price},
            </if>
            <if test="target != null">
                target = #{target},
            </if>
            <if test="description != null and description != ''">
                description = #{description},
            </if>
            <if test="updateTime != null">
                update_time = #{updateTime},
            </if>
        </set>
        where id = #{id}
    </update>

    <select id="select" resultType="com.qk.entity.Course">
        select * from course
        <where>
            <if test="name != null and name != ''">
                and name like concat('%',#{name},'%')
            </if>
            <if test="subject != null">
                and subject = #{subject}
            </if>
            <if test="target != null">
                and target = #{target}
            </if>
        </where>
        order by update_time desc
        limit #{offset},#{pageSize}
    </select>
    <select id="count" resultType="java.lang.Long">
        select count(*) from course
        <where>
            <if test="name != null and name != ''">
                and name like concat('%',#{name},'%')
            </if>
            <if test="subject != null">
                and subject = #{subject}
            </if>
            <if test="target != null">
                and target = #{target}
            </if>
        </where>
    </select>
</mapper>